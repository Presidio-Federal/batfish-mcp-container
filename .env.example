# Batfish Connection
BATFISH_HOST=batfish
BATFISH_PORT=9996

# Authentication Settings
# Set to true to disable JWT authentication (for development/testing)
DISABLE_JWT_AUTH=true

# Azure AD Configuration (required if DISABLE_JWT_AUTH=false)
# AZURE_AD_TENANT_ID=your-tenant-id
# AZURE_AD_CLIENT_ID=your-client-id

# Logging
ENABLE_AUTH_LOGGING=false

# Server Configuration
PORT=3009
HOST=0.0.0.0
TRANSPORT=http

# GitHub Container Registry (for docker-compose)
# Replace with your GitHub username/organization
GITHUB_REPOSITORY=yourusername/batfish-mcp-container
